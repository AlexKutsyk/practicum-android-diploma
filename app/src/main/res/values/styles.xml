<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseTextStyle">
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="BoldTextStyle" parent="BaseTextStyle">
        <item name="android:fontFamily">@font/ys_display_bold</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/text_size_32</item>
    </style>

    <style name="MediumTextStyle" parent="BaseTextStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/text_size_22</item>
    </style>

    <style name="RegularTextStyle" parent="BaseTextStyle">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="SmallTextStyle" parent="BaseTextStyle">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/text_size_12</item>
    </style>

    <style name="SearchQueryTextStyle" parent="RegularTextStyle">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SearchHintTextStyle" parent="RegularTextStyle">
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="TextDevelopersStyle" parent="MediumTextStyle">
        <item name="android:layout_marginBottom">@dimen/spacing_16</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">@dimen/spacing_16</item>
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="BottomNavigationItemStyle" parent="Base.Widget.Material3.BottomNavigationView">
        <item name="itemPaddingTop">@dimen/spacing_8</item>
        <item name="itemPaddingBottom">@dimen/spacing_10</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="itemActiveIndicatorStyle">@style/ItemActiveIndicatorStyle</item>
        <item name="itemTextAppearanceActive">@style/ItemTextAppearanceActiveStyle</item>
        <item name="itemTextAppearanceInactive">@style/ItemTextAppearanceInactiveStyle</item>
        <item name="itemIconTint">@color/item_color</item>
        <item name="itemTextColor">@color/item_color</item>
    </style>

    <style name="ItemTextAppearanceInactiveStyle">
        <item name="itemTextColor">@color/grey</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ItemTextAppearanceActiveStyle" parent="ItemTextAppearanceInactiveStyle">
        <item name="itemTextColor">@color/blue</item>
    </style>

    <style name="ItemActiveIndicatorStyle">
        <item name="itemIconTint">@color/blue</item>
    </style>

    <style name="ItemInactiveIndicatorStyle">
        <item name="itemIconTint">@color/grey</item>
    </style>

    <style name="TransparentButtonStyle">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">@dimen/item_size_20</item>
    </style>

    <style name="BlueButtonStyle" parent="TransparentButtonStyle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="VacancyToolBarStyle">
        <item name="android:navigationIcon">@drawable/ic_arrow_back</item>
        <item name="android:contentInsetStartWithNavigation">@dimen/spacing_4</item>
    </style>

    <style name="VacancyToolBarIconsStyle">
        <item name="android:layout_width">@dimen/item_size_48</item>
        <item name="android:layout_height">@dimen/item_size_48</item>
        <item name="android:padding">@dimen/spacing_12</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="Regular12HintTextStyle" parent="BaseTextStyle">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_12</item>
    </style>

    <style name="Regular16GrayTextStyle" parent="RegularTextStyle">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="Regular12OnPrimaryTextStyle" parent="Regular12HintTextStyle">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

</resources>
