<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseTextStyle">
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="BoldTextStyle" parent="BaseTextStyle">
        <item name="android:fontFamily">@font/ys_display_bold</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/text_size_32</item>
    </style>

    <style name="MediumTextStyle" parent="BaseTextStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/text_size_22</item>
    </style>

    <style name="RegularTextStyle" parent="BaseTextStyle">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="SearchQueryTextStyle" parent="RegularTextStyle">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SearchHintTextStyle" parent="RegularTextStyle">
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="TransparentButtonStyle">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">@dimen/item_size_20dp</item>
        <item name="android:background">@drawable/background_transparent_button</item>
    </style>

    <style name="BlueButtonStyle" parent="TransparentButtonStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/background_blue_button</item>
    </style>

</resources>
